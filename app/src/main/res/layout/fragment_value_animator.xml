<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_of_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="ofFloat"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn_of_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:text="ofInt" />

        <Button
            android:id="@+id/btn_of_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:text="ofObject" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_of_pvh_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:text="ofPvhFloat" />
        <Button
            android:id="@+id/btn_of_pvh_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:text="ofPvhInt" />

        <Button
            android:id="@+id/btn_of_pvh_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:text="ofPvhObject" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_kf_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:text="keyframeFloat" />

            <Button
                android:id="@+id/btn_kf_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:text="keyframeInt" />

            <Button
                android:id="@+id/btn_kf_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:text="keyframeObject" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dis"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:text="动画效果"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"/>
</FrameLayout>